<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/user_info_toast_view_padding"
    android:background="@color/built_in_detail_top_grey">

    <ImageView
        android:id="@+id/image_view_user_info_heart_rate_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/user_info_toast_view_icon_margins"
        android:layout_marginLeft="@dimen/user_info_toast_view_icon_margins"
        android:src="@drawable/ic_heart" />

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/txt_view_user_info_heart_rate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view_user_info_heart_rate_icon"
        android:layout_centerVertical="true"
        android:text="@string/zero"
        android:textSize="@dimen/user_info_toast_view_heart_rate_text_size"
        android:textColor="@android:color/white"
        custom:typeface="proxima_bold"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/spinner_user_info_heart_rate"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_info_toast_view_heart_rate_spinner_top_magin"
        android:layout_marginLeft="@dimen/user_info_toast_view_heart_rate_spinner_left_magin"
        android:layout_toRightOf="@+id/image_view_user_info_heart_rate_icon"
        android:visibility="visible"
        />

</RelativeLayout>