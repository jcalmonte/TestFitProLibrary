<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
             tools:context="com.ifit.android.werewolf.summary.fragments.LoggedInWorkoutFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingTop="24dp"
        android:gravity="center">

        <com.ifit.android.werewolf.view.IfitTextView
            android:id="@+id/summary_workout_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textColor="@color/greyscale_4"
            tools:ignore="HardCodedText"
            android:textAllCaps="true"
            android:textSize="@dimen/workout_summary_title_font"
            android:text="@string/summary_text_workout_summary"
            custom:typeface="proxima_regular"
            android:contentDescription="WorkoutSummaryText"/>

        <LinearLayout
            android:id="@+id/summary_workout_box_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_below="@id/summary_workout_summary_text">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/workout_item_box_margin"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_pace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/workout_item_box_margin"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_avg_incline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/workout_item_box_margin"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

                <com.ifit.android.werewolf.view.WorkoutItemBox
                    android:id="@+id/summary_workout_box_avg_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

            </LinearLayout>

            <!-- New and finish button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/summary_button_new_workout"
                    android:layout_width="@dimen/workout_item_box_width"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_button_new_workout_label"
                    android:padding="10dp"
                    android:layout_marginRight="@dimen/workout_item_box_margin"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>

                <Button
                    android:id="@+id/summary_button_finish"
                    android:layout_width="@dimen/workout_item_box_width"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/summary_button_finish_label"
                    android:layout_marginBottom="@dimen/workout_item_box_margin"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary_workout_box_container"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.ifit.android.werewolf.view.IfitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/workout_summary_bottom_text_font"
                android:textColor="@color/greyscale_4"
                tools:ignore="HardCodedText"
                android:textAllCaps="true"
                android:text="@string/summary_text_powered_by_google_maps"
                custom:typeface="proxima_regular"
                android:contentDescription="SummaryIfitWebsiteText"/>

            <com.ifit.android.werewolf.view.IfitTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/workout_summary_bottom_text_font"
                android:textColor="@color/greyscale_4"
                tools:ignore="HardCodedText"
                android:text="@string/summary_ifit_dot_com"
                custom:typeface="proxima_regular"
                android:layout_gravity="center"
                android:contentDescription="SummaryIfitWebsiteText"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
