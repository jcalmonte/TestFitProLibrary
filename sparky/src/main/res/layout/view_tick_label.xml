<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/view_progress_bar_tick_text_margin_top_bottom"
                android:layout_marginBottom="@dimen/view_progress_bar_tick_text_margin_top_bottom"
                android:layout_height="match_parent">

    <View
        android:id="@+id/tickView"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#282828"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/tickerLabelTextView"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/tickView"
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/view_progress_bar_tick_text_margin_right"
        android:layout_height="wrap_content"
        custom:typeface="proxima_regular"/>

</RelativeLayout>