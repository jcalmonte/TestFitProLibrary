<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.ifit.android.werewolf.view.IFitSidePhotoView
        android:id="@+id/lose_weight_side_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/loseWeightWorkoutListView"
        android:layout_width="@dimen/list_item_workout_width"
        android:layout_height="match_parent"
        android:divider="@color/greyscale_0"
        android:dividerHeight="@dimen/workout_list_view_divider_height" />

</LinearLayout>