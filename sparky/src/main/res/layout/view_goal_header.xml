<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/goal_header_value_width"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/goal_header_view_padding_top_bottom"
                android:paddingBottom="@dimen/goal_header_view_padding_top_bottom"
                android:paddingRight="@dimen/goal_header_view_padding_right"
                android:paddingLeft="@dimen/goal_header_view_padding_left"
                android:background="@android:color/black">

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/txt_view_goal_header_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/goal_header_value_margin_left"
        android:layout_alignParentRight="true"
        custom:typeface="proxima_bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/goal_header_value_text_size"
        android:gravity="top"
        android:text="0.0"/>

    <ImageView
        android:id="@+id/image_view_goal_header_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/goal_header_icon_margin_top"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/txt_view_goal_header_value"/>

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/txt_view_goal_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_view_goal_header_value"
        android:layout_alignParentRight="true"
        custom:typeface="proxima_regular"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="@dimen/goal_header_title_text_size"
        android:text="@string/goal_total_calories"/>

</RelativeLayout>