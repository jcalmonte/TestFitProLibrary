<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trackUnderlayImg"
            android:layout_width="@dimen/track_image_width"
            android:layout_height="@dimen/track_image_height"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_bg_workout_track_underlay"
            tools:ignore="HardCodedText"
            android:contentDescription="track_under_img"/>

        <ImageView
            android:id="@+id/trackOverlayImg"
            android:layout_width="@dimen/track_image_width"
            android:layout_height="@dimen/track_image_height"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_bg_workout_track_overlay"
            tools:ignore="HardCodedText"
            android:contentDescription="track_top_img"/>

        <com.ifit.sfit.sparky.widgets.VerticalSeekBar
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_alignParentRight="true"
            android:id="@+id/speed_seek_bar"
            android:layout_centerVertical="true" />

        <com.ifit.sfit.sparky.widgets.VerticalSeekBar
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:id="@+id/incline_seek_bar"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Incline"
            android:id="@+id/inclineTextView"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/incline_seek_bar"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/incline_seek_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speed"
            android:id="@+id/speedTextView"
            android:gravity="center"
            android:layout_alignBaseline="@+id/speedTextView"
            android:layout_alignBottom="@+id/speedTextView"
            android:layout_alignStart="@+id/speed_seek_bar"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Max"
            android:id="@+id/maxInclineTextView"
            android:layout_below="@+id/inclineTextView"
            android:layout_toRightOf="@+id/incline_seek_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Min"
            android:paddingBottom="25dp"
            android:id="@+id/minInclineTextView"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/incline_seek_bar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Max"
            android:id="@+id/maxSpeedTextView"
            android:layout_below="@+id/speedTextView"
            android:layout_toLeftOf="@+id/speed_seek_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Min"
            android:paddingBottom="25dp"
            android:id="@+id/minSpeedTextView"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/speed_seek_bar" />

        <!--<ImageView-->
            <!--android:id="@+id/trackOverlayImg"-->
            <!--android:layout_width="@dimen/track_image_width"-->
            <!--android:layout_height="@dimen/track_image_height"-->
            <!--android:src="@drawable/bg_workout_track_overlay"-->
            <!--android:layout_centerInParent="true"/>-->



    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/inclineLinearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:text="0.0%"
            android:textStyle="bold"
            android:id="@+id/currentInclineTextView"
            android:layout_marginLeft="60dp"
            android:textIsSelectable="false"
            android:visibility="invisible" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp"
            android:text="0.0 kph"
            android:textStyle="bold"
            android:id="@+id/currentSpeedTextView"
            android:layout_marginLeft="60dp"
            android:textIsSelectable="false"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>