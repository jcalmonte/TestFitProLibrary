<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/user_info_toast_view_padding"
    android:background="@color/built_in_detail_top_grey">

    <ImageView
        android:id="@+id/image_view_user_info_fan_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/ic_icn_summary_hr" />

    <!-- Change image to show the correct -->
    <ImageView
        android:id="@+id/image_view_user_info_fan_progress_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view_user_info_fan_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_icn_summary_hr"
        />

</RelativeLayout>