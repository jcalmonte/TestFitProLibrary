<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="@dimen/goal_value_changer_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/goal_value_changer_padding">

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/txt_view_goal_value_changer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        custom:typeface="proxima_regular"
        android:textSize="@dimen/goal_value_changer_title_text_size"
        />

    <com.ifit.android.werewolf.view.IfitTextView
        android:id="@+id/txt_view_goal_value_changer_value"
        android:layout_width="@dimen/goal_value_change_txt_view_width"
        android:layout_height="@dimen/goal_value_change_txt_view_height"
        android:layout_below="@+id/txt_view_goal_value_changer_title"
        android:layout_marginBottom="@dimen/goal_value_change_txt_value_margin_bottom"
        android:background="@color/greyscale_8"
        android:textSize="@dimen/goal_value_changer_value_text_size"
        android:gravity="center"
        android:textAlignment="gravity"
        custom:typeface="proxima_bold"
        />

    <LinearLayout
        android:layout_width="@dimen/goal_value_change_txt_view_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_goal_value_changer_value"
        android:layout_marginBottom="@dimen/goal_value_change_btn_margin_bottom">

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/image_btn_goal_value_changer_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:src="@drawable/ic_minus"
            />

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/image_btn_goal_value_changer_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_plus"
            />
    </LinearLayout>

</RelativeLayout>