<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/goal_info_goal_workout_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <com.ifit.android.werewolf.goal.view.GoalWorkoutInfoView
            android:id="@+id/goal_info_goal_workout_info_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            app:info_index="1"
            />

        <View
            android:id="@+id/goal_info_goal_workout_info_tick"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyscale_7"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/goal_workout_tick_margin_top_bottom"
            android:paddingBottom="@dimen/goal_workout_tick_margin_top_bottom"
            />

        <com.ifit.android.werewolf.goal.view.GoalWorkoutInfoView
            android:id="@+id/goal_info_goal_workout_info_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            app:info_index="0"
            />

        </LinearLayout>

    <com.ifit.android.werewolf.view.progressbar.IfitProgressBar
        android:id="@+id/progressbar_console_goal_workout"
        app:progressBarLabel="@string/workout"
        app:backgroundColor="@color/greyscale_8"
        app:foregroundColor="@color/green"
        android:layout_width="@dimen/view_progress_bar_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_progress_bar_margin_left"
        android:layout_marginBottom="@dimen/view_progress_bar_margin_bottom"
        />

</RelativeLayout>