<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seekBarIncline"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Device"
        android:id="@+id/textViewMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mode:"
        android:id="@+id/textViewMode"
        android:layout_marginLeft="41dp"
        android:layout_alignTop="@+id/textViewIncline"
        android:layout_toRightOf="@+id/textViewIncline" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:id="@+id/buttonMain"
        android:layout_below="@+id/textViewMain"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTask"
        android:text="Task"
        android:layout_alignTop="@+id/buttonMain"
        android:layout_toRightOf="@+id/buttonMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:id="@+id/buttonMode"
        android:layout_below="@+id/textViewCpu"
        android:layout_toRightOf="@+id/buttonIncline" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSpeedText"
        android:phoneNumber="false"
        android:numeric="decimal"
        android:layout_alignTop="@+id/buttonMode"
        android:layout_toRightOf="@+id/speedLabel"
        android:hint="Speed"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="data"
        android:id="@+id/textViewData"
        android:layout_below="@+id/buttonTask"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speed"
        android:id="@+id/speedLabel"
        android:layout_alignBaseline="@+id/editSpeedText"
        android:layout_alignBottom="@+id/editSpeedText"
        android:layout_toRightOf="@+id/buttonMode"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="kph"
        android:id="@+id/textViewCurrentSpeed"
        android:layout_alignBottom="@+id/speedLabel"
        android:layout_toRightOf="@+id/editSpeedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="cpu"
        android:id="@+id/textViewCpu"
        android:layout_above="@+id/buttonTask"
        android:layout_toRightOf="@+id/textViewMain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/InclineLabel"
        android:text="Incline"
        android:layout_alignTop="@+id/textViewCurrentSpeed"
        android:layout_toRightOf="@+id/textViewCurrentSpeed"
        android:layout_marginLeft="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editInclineText"
        android:hint="incline"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:numeric="decimal"
        android:singleLine="true"
        android:layout_alignBottom="@+id/textViewMode"
        android:layout_toRightOf="@+id/InclineLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="%"
        android:id="@+id/textViewIncline"
        android:layout_alignTop="@+id/InclineLabel"
        android:layout_toRightOf="@+id/editInclineText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incline"
        android:id="@+id/buttonIncline"
        android:layout_alignTop="@+id/buttonKeyPress"
        android:layout_toRightOf="@+id/buttonKeyPress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" Dist="
        android:id="@+id/textViewDistance"
        android:layout_above="@+id/buttonMode"
        android:layout_toRightOf="@+id/textViewCpu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="runTime= "
        android:id="@+id/textViewUserTime"
        android:layout_alignTop="@+id/textViewDistance"
        android:layout_toRightOf="@+id/textViewDistance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tabletStartTime="
        android:id="@+id/textViewTabletTime"
        android:layout_alignTop="@+id/textViewUserTime"
        android:layout_toRightOf="@+id/textViewUserTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keys"
        android:id="@+id/buttonKeyPress"
        android:layout_alignTop="@+id/buttonTask"
        android:layout_toRightOf="@+id/buttonTask" />

</RelativeLayout>